{% extends 'base.html.twig' %}

{% block title %}Car Dealer!{% endblock %}
   
{% block body %}
    <h1 class="text-logo mt-4" style="padding-left:50px;">CAR DEALER</span></h1>
    <div class="container" style="background:#fff;padding:50px;border-radius:10px;">
    
        <div class="row">
            <h1><strong>Lists of Cars </strong><a href="{{path('create')}}" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span>Ajouter</a></h1>
            {% for message in app.flashes('notice')%}
                <div class="alert alert-success mt-4 mb-4">
                    {{ message }}
                </div>
            {% endfor %}
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Cost</th>
                        <th>Numbers of Doors</th>
                        <th>Numbers of Seats</th>
                    </tr>
                </thead>
                <tbody>
                        {% for data in pagination %}
                           <tr>
                                <th scope="row">{{data.id}}</th>
                                <td>{{data.name}}</td>
                                <td></td>
                                <td>{{data.cost}}</td>
                                <td>{{data.nbDoors}}</td>
                                <td>{{data.nbSeats}}</td>
                                <td width=300>
                                    <a href="{{path('view',{'id':data.id })}}" class="btn btn-default"><span class="glyphicon glyphicon-eye-open"></span>View</a>
                                    <a href="{{path('update',{'id':data.id })}}" class="btn btn-primary"><span class="glyphicon glyphicon-pencil"></span>Update</a>
                                    <a href="{{path('delete',{'id': data.id })}}" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span>Delete</a>
                                </td>
                            </tr>
                         {% endfor %}
                </tbody>
            </table>
            <div class="pagination">
            {{knp_pagination_render(pagination)}}
            </div>
        </div>
    </div>
{% endblock %}