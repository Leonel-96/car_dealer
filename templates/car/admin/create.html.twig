{% extends 'base.html.twig' %}

{% block title %} Add Car!{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <h3 class="mt-3 mb-5">Create Car</h3>
            <div class="col-md-6 offset-md-3">
                {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name,{'attr':{'class':'form-control'}})}}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.nbSeats) }}
                        {{ form_widget(form.nbSeats,{'attr':{'class':'form-control'}})}}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.nbDoors) }}
                        {{ form_widget(form.nbDoors,{'attr':{'class':'form-control'}})}}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.cost) }}
                        {{ form_widget(form.cost,{'attr':{'class':'form-control'}})}}
                    </div>
                    <div class="form-group">
                        <button class="btn btn-info mt-2 text-white">Submit</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}